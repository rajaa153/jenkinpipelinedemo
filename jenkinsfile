pipeline {
 agent any
 stages {
  stage('Build') {
   steps {
    echo 'Building..'
   }
  }
  stage('Test') {
   steps {
    echo 'Testing..'
   }
  }
  stage('Deploy') {
   steps {
    echo 'Deploying....'
   }
  }
  stage('email notification'){
    mail bcc: '', body: '''hi 
      welcome''', cc: '', from: '', replyTo: '', subject: 'jenkins job', to: 'rajaa15@gmail.com'
   }
   
  }
}
